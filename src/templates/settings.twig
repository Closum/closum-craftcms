{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("closum\\closumconnector\\assetbundles\\closumconnector\\ClosumConnectorAsset") %}

{{ forms.textField({
      required: true,
      label: 'Api Username',
      id: 'api_username',
      name: 'apiUsername',
      value: settings['apiUsername']})
}}
{{ forms.textField({
      required: true,
      label: 'Api Password',
      id: 'api_pw',
      name: 'apiPw',
      value: settings['apiPw']})
}}
{{ forms.textField({
      required: true,
      label: 'Endpoint',
      id: 'endpoint',
      name: 'endpoint',
      value: settings['endpoint']})
}}
{{ forms.textField({
      required: true,
      label: 'Token Endpoint',
      id: 'token_endpoint',
      name: 'tokenEndpoint',
      value: settings['tokenEndpoint']})
}}
{{ forms.lightswitchField({
      label: "Send Email Notification" | t,
      name: 'emailNotification',
      on: settings.emailNotification,
}) }}
{{ forms.textField({
      required: true,
      label: 'Email to be Notified',
      id: 'email_to_notify',
      name: 'emailToNotify',
      value: settings['emailToNotify']})
}}
